{
  "rulesDirectory": ["tslint-plugin-prettier"],
  "extends": [
    "tslint-react-a11y",
    "tslint-eslint-rules",
    "tslint-config-blvd/react",
    "tslint-config-prettier"
  ],
  "rules": {
    "prettier": [
      true,
      {
        "arrowParens": "avoid",
        "bracketSpacing": true,
        "printWidth": 100,
        "proseWrap": "preserve",
        "semi": false,
        "singleQuote": true,
        "tabWidth": 2,
        "trailingComma": "es5",
        "useTabs": false
      }
    ]
  }
}
